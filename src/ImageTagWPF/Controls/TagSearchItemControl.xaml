<UserControl x:Class="ImageTagWPF.Controls.TagSearchItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageTagWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="80">
    <Grid>
        <Label x:Name="TagNameLabel" Content="{Binding Tag.Name}" HorizontalAlignment="Center" Margin="5,13,19,13" VerticalAlignment="Center" Width="56"/>
        <Label x:Name="XLabel" Content="X" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="16" 
               MouseDoubleClick="XLabel_OnMouseDoubleClick"/>
    </Grid>
</UserControl>
